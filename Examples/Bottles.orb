api Bottles
	with Orb::Core::Main
	with Orb::Core::IO

	(Main) main (argc Int, argv [String]) (Int)
		[99 ... 1].for(i)
			plural = (i == 1) ? ("s", "")
			line1 = "\(i) bottle\(plural) of beer on the wall,\n"
			line2 = "\(i) bottle\(plural) of beer,\n"
			line3 = "Take one down, pass it around,\n"
			line4 = "\(i - 1) bottle\(plural) of beer on the wall.\n"

			IO.print(line1, line2, line3, line4)
		...
	...
...